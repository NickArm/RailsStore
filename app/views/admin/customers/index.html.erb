<h1>Registered Customers</h1>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Registered On</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= link_to customer.name, admin_customer_path(customer) %></td> <!-- Link to show page -->
        <td><%= customer.email %></td>
        <td><%= customer.created_at.strftime("%d %B %Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
