<h1>Customer Details</h1>

<table class="table">
  <tr>
    <th>ID:</th>
    <td><%= @customer.id %></td>
  </tr>
  <tr>
    <th>Name:</th>
    <td><%= @customer.name %></td>
  </tr>
  <tr>
    <th>Email:</th>
    <td><%= @customer.email %></td>
  </tr>
  <tr>
    <th>Phone:</th>
    <td><%= @customer.phone %></td>
  </tr>
  <tr>
    <th>Gender:</th>
    <td><%= @customer.gender %></td>
  </tr>
  <tr>
    <th>Birthday:</th>
    <td><%= @customer.birthday %></td>
  </tr>
  <tr>
    <th>Address:</th>
    <td><%= @customer.address %></td>
  </tr>
  <tr>
    <th>City:</th>
    <td><%= @customer.city %></td>
  </tr>
  <tr>
    <th>Country:</th>
    <td><%= @customer.country %></td>
  </tr>
  <tr>
    <th>Registered On:</th>
    <td><%= @customer.created_at.strftime("%d %B %Y") %></td>
  </tr>
</table>

<%= link_to "Back to Customers", admin_customers_path, class: "btn btn-secondary" %>
