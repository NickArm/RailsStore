<%= form_with model: [:admin, @variation], local: true do |f| %>
  <div class="mb-3">
    <%= f.label :name, "Variation Name", class: "form-label" %>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>

  <div>
    <h5>Variation Values (separated by semicolon ";")</h5>
    <%= f.text_area :variation_values_input, class: "form-control", rows: 3 %>
  </div>

  <div class="mt-3">
    <%= f.submit "Save Variation", class: "btn btn-primary" %>
  </div>
<% end %>
