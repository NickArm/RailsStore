<h1>Products</h1>

<%= link_to "New product", new_product_path if authenticated? %>


<div class="container mt-5">
  <h1 class="text-center text-primary">Products</h1>
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-4">
        <div class="card mb-3">
          <%= image_tag product.main_photo, class: "card-img-top", alt: product.name if product.main_photo.attached? %>
          <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text"><%= product.description %></p>
            <p class="card-text">
              <strong>Price:</strong> <%= number_to_currency(product.price) %>
            </p>
            <%= link_to "View Product", product_path(product), class: "btn btn-primary" %>
            <%= button_to "Add to Cart", add_item_cart_path(product_id: product.id), method: :post, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


